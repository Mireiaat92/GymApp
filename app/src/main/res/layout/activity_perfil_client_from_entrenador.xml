<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_perfil_client_from_entrenador"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <!-- AVATAR -->
    <LinearLayout
        android:id="@+id/linear_layout_avatar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@drawable/profile_background"
        android:layout_below="@+id/toolbar_perfil_client_from_entrenador"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:clickable="false"
            android:src="@drawable/avatar"
            android:background="@drawable/rounded_border_image"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/linear_layout_avatar">
        <ImageView
            android:id="@+id/nameicon"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_profile_black"/>

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="eliminar"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_above="@+id/clientMail"
            android:layout_toEndOf="@+id/nameicon" />
        <TextView
            android:id="@+id/clientMail"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:textSize="25sp"
            android:layout_alignBottom="@+id/nameicon"
            android:layout_alignStart="@+id/clientName" />
    </RelativeLayout>


    <!-- HEIGHT LABEL -->
    <RelativeLayout
        android:id="@+id/heightlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namelayout">
        <ImageView
            android:id="@+id/heighticon"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_height_black"/>

        <TextView
            android:id="@+id/clientHeight"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:textSize="25sp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/heighticon" />
    </RelativeLayout>

    <!-- WEIGHT LABEL -->
    <RelativeLayout
        android:id="@+id/weightlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightlayout">
        <ImageView
            android:id="@+id/weighticon"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_weight"/>

        <TextView
            android:id="@+id/clientWeight"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:textSize="25sp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/weighticon" />
    </RelativeLayout>

    <!-- OBJECTIU LABEL -->
    <!-- HEIGHT LABEL -->
    <RelativeLayout
        android:id="@+id/goalslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightlayout">
        <ImageView
            android:id="@+id/goalsicon"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_star"/>

        <TextView
            android:id="@+id/clientObjectiu"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:textSize="25sp"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/goalsicon" />
    </RelativeLayout>
</RelativeLayout>