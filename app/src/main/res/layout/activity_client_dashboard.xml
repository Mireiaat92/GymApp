<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AddClient button -->
    <Button android:id="@+id/btnPerfil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Perfil"/>

    <TextView
        android:id="@+id/entrenadorlabel"
        android:layout_below="@+id/btnPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrenadorlabel"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/entrenador"
        android:layout_below="@+id/btnPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/entrenadorlabel"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/tascalistview"
        android:layout_below="@+id/entrenadorlabel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>