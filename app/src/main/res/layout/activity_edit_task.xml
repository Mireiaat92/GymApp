<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#eee">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit_task"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/toolbar_edit_task"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--suppress CheckTagEmptyBody -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EditTask">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">
            <LinearLayout
                android:id="@+id/linearLayoutTaskTitol"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp">

                <EditText
                    android:id="@+id/EditTextTaskTitol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/namelabel"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#333333"
                    android:textColorHint="#bbbbbb" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTaskDescription"
                android:layout_below="@+id/linearLayoutTaskTitol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/EditTextTaskDescription"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:hint="@string/descripciolabel"
                    android:scrollbars="vertical"
                    android:gravity="top|left"
                    android:lines="3"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#bbbbbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayoutTaskDescription"
                android:weightSum="1">
                <!--DUE DATE TASK LABEL-->
                <TextView
                    android:id="@+id/dueDate_task"
                    android:hint="@string/duedatelabel"
                    android:textSize="20dp"
                    android:textColorHint="#bbbbbb"
                    android:layout_width="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_height="100px"
                    android:textColor="#708090"
                    android:singleLine="true"
                    android:layout_alignParentStart="false" />

                <ImageButton
                    android:id="@+id/btnChangeDate"
                    android:src="@drawable/ic_calendar"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutDeleteTask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayoutExtraFunctions">

                <Button
                    android:id="@+id/sendDeleteThisTask"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dip"
                    android:text="@string/deleteTask"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_delete"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>